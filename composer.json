{
    "name": "ahmard/guzwrap",
    "description": "A wrapper around popular php http client, \"GuzzleHttp\"",
    "type": "library",
    "license": "MIT",
    "keywords": ["guzzle", "guzzlehttp", "curl", "http", "client"],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.5"
    },
    "autoload": {
        "psr-4": {
            "Guzwrap\\": "src/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.9",
        "phpunit/phpunit": "^9.5"
    },
    "autoload-dev": {
        "psr-4": {
            "Guzwrap\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse"
    }
}
